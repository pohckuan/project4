<h1>hello</h1>
{{#each recipes as |recipe index|}}

<h2><a href="/recipes/{{recipe.name}}">{{recipe.name}}</a></h2>
<h3>{{recipe.desc}}</h3>
<p>
  {{recipe.preptime}}
</p>
<p>
  {{recipe.cooktime}}
</p>
<h3>Ingredients:</h3>
<ul>
  {{#each recipe.ingredient as | ingredient i | }}
    <li>{{ingredient}}</li>
  {{/each}}
</ul>

<h3>Directions:</h3>
<ul>
  {{#each recipe.direction as | direction i | }}
    <li>{{direction}}</li>
  {{/each}}
</ul>
<form action="/recipes/{{recipe.name}}/delete" method="post">
  <button type="submit">Delete</button>
</form>
{{/each}}
